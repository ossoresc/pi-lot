{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@pi-lot-interfaces/*": ["../pi-lot-interfaces/*"]
        },
        "types": [
            "node"
        ]
    },
    "ts-node": {
        "transpileOnly": true,
        "experimentalResolver": true
    },
    "include": [
        "src/**/*.ts",
        "../pi-lot-interfaces/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
